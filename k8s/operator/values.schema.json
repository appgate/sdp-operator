{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "properties": {
    "sdp": {
      "type": "object",
      "properties": {
        "operator": {
          "required": ["deviceId", "host", "version", "mode"],
          "type": "object",
          "properties": {
            "host": {
              "type": "string"
            },
            "deviceId": {
              "type": "string"
            },
            "version": {
              "type": "string",
              "enum": [
                "v14",
                "v15",
                "v16",
                "v17"
              ]
            },
            "mode": {
              "type": "string",
              "enum": [
                "run",
                "git-sync"
              ]
            },
            "run": {
              "type": "object",
              "properties": {
                "dryRun": {
                  "type": "boolean"
                },
                "twoWaySync": {
                  "type": "boolean"
                },
                "cleanup": {
                  "type": "boolean"
                }
              }
            },
            "gitSync": {
              "type": "object",
              "properties": {
                "git": {
                  "type": "object",
                  "properties": {
                    "vendor": {
                      "type": "string",
                      "enum": [
                        "github"
                      ]
                    },
                    "baseBranch": {
                      "type": "string"
                    },
                    "repositoryUrl": {
                      "type": "string"
                    },
                    "secret": {
                      "type": "string"
                    }
                  }
                },
                "github": {
                  "type": "object",
                  "properties": {
                    "repository": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "logLevel": {
              "type": "string",
              "enum": [
                "info",
                "debug",
                "trace"
              ]
            },
            "timeout": {
              "type": "number"
            },
            "builtinTags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "sslNoVerify": {
              "type": "boolean"
            },
            "targetTags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "excludeTags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "fernetKey": {
              "type": "string"
            },
            "caCert": {
              "type": "string"
            },
            "configMapMt": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}

